<div class="b-search-dropdown_group">
    <% if @items: %>
    <% for item in @items: %>
        <div class="group_items_wrapper">
            <ul class="group-items">
                <% for i in item.children: %>
                    <li>
                        <a  class="item"
                            data-class="<%= i.class %>"
                            data-href="<%= i.href %>">
                            <%= i.label %>
                        </a>
                    </li>
                <% end %>
            </ul>
        </div>
        <div class="group_attributes">
            <p class="title"><%= item.label %></p>
        </div>
    <% end %>
    <% end %>
</div>
